<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/ln_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEECEC"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Memorial
        Collection"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_25ssp"
        android:textColor="#e57373"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        />

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="@dimen/_10sdp"
        >
        <ImageView
            android:id="@+id/img_crop1"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            app:srcCompat="@drawable/circle_add_img"
            android:layout_marginRight="@dimen/_50sdp"
            />

        <ImageView
            android:id="@+id/img_crop2"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            app:srcCompat="@drawable/circle_add_img"
            />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/ln2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/ln1"
        android:layout_marginTop="@dimen/_50sdp"
        >
        <ImageView
            android:id="@+id/img_crop3"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            app:srcCompat="@drawable/circle_add_img"
            android:layout_marginRight="@dimen/_50sdp"
            />

        <ImageView
            android:id="@+id/img_crop4"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            app:srcCompat="@drawable/circle_add_img"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/ln2"
        android:layout_marginTop="@dimen/_40sdp"
        >
        <Button
            android:id="@+id/btn_save"
            android:layout_width="1dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@drawable/roundrect_pink"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="@dimen/_15ssp"
            />

        <Button
            android:id="@+id/btn_print"
            android:layout_width="1dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/roundrect_red"
            android:text="Print"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="@dimen/_15ssp"
            />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />
</RelativeLayout>